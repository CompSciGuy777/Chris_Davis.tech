<%= form_for @post do |f| %>
		<% if @post.errors.any? %>
			<h2><%= pluralize(@post.errors.count, "error") %> prevent this post from saving:</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		<% end %>

<div class="form">
	<div class="input">
	<%= f.label :title %><br>
	<%=	f.text_field :title %>
	</div>

	<br>
	<br>
	
	<div class="input">
	<%= f.label :content, "Write the article here" %><br>
	<%= f.text_area :content, class:'text_area' %>
	</div>

	<br>
	<br>
	<div><%= f.submit "Create Post", class: 'form_button highlight'%></div>
</div>
	
<% end %>